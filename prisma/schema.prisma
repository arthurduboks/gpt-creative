generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Content {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  genContent String
  title String
  description String @db.Text
  image String? @db.Text
  suggestions Json
  @@unique([genContent])
}

model Token {
  clerkId String @id
  tokens Int @default(5000)
}